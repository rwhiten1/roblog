<div class="admin_content med_font">
<H3 class="light-grey-font">Edit Role: <%= @role.name %></H3>
<h3 class="light-grey-font">Here are <%= @role.name %>'s Rights:</h3>
<% form_for @role do |f| %>
<table class="light-grey-font blog_table" cellpadding="0" cellspacing="0">
	<tr>
		<td>Right Name</td>
		<td>Controller</td>
		<td>Action</td>
		<td>Uncheck to remove</td>
	</tr>
	<% @role.rights.each do |right| %>
	<tr>
		<td class="white-font small_font"><%= right.name %></td>
		<td class="white-font small_font"><%= right.controller %></td>
		<td class="white-font small_font"><%= right.action %></td>
		<td class="white-font small_font">
			<input name="role[rights][<%= right.name %>]" id="role_rights_<%= right.name %>" type="checkbox" value="<%= right.id %>" checked="true"/>
		</td>
	</tr>		
	<%	end	 %>
</table>

<h3 class="light-grey-font">These rights can be added to the role: </h3>
<table class="light-grey-font blog_table" cellpadding="0" cellspacing="0">
	<tr>
		<td>Right Name</td>
		<td>Controller</td>
		<td>Action</td>
		<td>Check to add</td>
	</tr>
	<% @role.get_unassigned_rights.each do |right|%>
	<tr>
		<td class="white-font small_font"><%= right.name %></td>
		<td class="white-font small_font"><%= right.controller %> </td>
		<td class="white-font small_font"><%= right.action %> </td>
		<td class="white-font small_font"><input name="role[rights][<%= right.name %>]" id="role_rights_<%= right.name %>" type="checkbox" value="<%= right.id %>" /></td>
	</tr>
	<% end %>
</table>

<div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</div>
